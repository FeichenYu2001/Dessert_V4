<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dessert.DessertMenuActivity">

    <!-- Header TextView -->
    <TextView
        android:id="@+id/textView11"
        style="@style/Widget.MaterialComponents.TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#BCA3E9"
        android:padding="16dp"
        android:text="Dessert Menu"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Dessert 1 Image -->
    <ImageView
        android:id="@+id/dessert1"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:contentDescription="@string/dessert1"
        android:src="@drawable/dessert1"
        app:layout_constraintTop_toBottomOf="@id/textView11"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <!-- Dessert 1 Name -->
    <TextView
        android:id="@+id/dessert1Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dessert1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/dessert1"
        app:layout_constraintStart_toEndOf="@id/dessert1"
        android:layout_marginStart="16dp" />

    <!-- Dessert 1 Price -->
    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: $5"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/dessert1Name"
        app:layout_constraintStart_toEndOf="@id/dessert1"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp" />

    <!-- Dessert 1 Quantity Label -->
    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity:"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textView12"
        app:layout_constraintStart_toEndOf="@id/dessert1"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp" />

    <!-- Dessert 1 Quantity Spinner -->
    <Spinner
        android:id="@+id/quantityDessert1Spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView15"
        app:layout_constraintStart_toEndOf="@id/dessert1"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp" />

    <!-- Dessert 2 Image -->
    <ImageView
        android:id="@+id/dessert2"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:contentDescription="@string/dessert2"
        android:src="@drawable/dessert2"
        app:layout_constraintTop_toBottomOf="@id/quantityDessert1Spinner"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp" />

    <!-- Dessert 2 Name -->
    <TextView
        android:id="@+id/dessert2Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dessert2"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/dessert2"
        app:layout_constraintStart_toEndOf="@id/dessert2"
        android:layout_marginStart="16dp" />

    <!-- Dessert 2 Price -->
    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: $3.5"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/dessert2Name"
        app:layout_constraintStart_toEndOf="@id/dessert2"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp" />

    <!-- Dessert 2 Quantity Label -->
    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity:"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textView13"
        app:layout_constraintStart_toEndOf="@id/dessert2"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp" />

    <!-- Dessert 2 Quantity Spinner -->
    <Spinner
        android:id="@+id/quantityDessert2Spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView17"
        app:layout_constraintStart_toEndOf="@id/dessert2"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp" />

    <!-- Dessert 3 Image -->
    <ImageView
        android:id="@+id/dessert3"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:contentDescription="@string/dessert3"
        android:src="@drawable/dessert3"
        app:layout_constraintTop_toBottomOf="@id/quantityDessert2Spinner"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp" />

    <!-- Dessert 3 Name -->
    <TextView
        android:id="@+id/dessert3Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dessert3"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/dessert3"
        app:layout_constraintStart_toEndOf="@id/dessert3"
        android:layout_marginStart="16dp" />

    <!-- Dessert 3 Price -->
    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: $7"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/dessert3Name"
        app:layout_constraintStart_toEndOf="@id/dessert3"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp" />

    <!-- Dessert 3 Quantity Label -->
    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity:"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textView14"
        app:layout_constraintStart_toEndOf="@id/dessert3"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp" />

    <!-- Dessert 3 Quantity Spinner -->
    <Spinner
        android:id="@+id/quantityDessert3Spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView18"
        app:layout_constraintStart_toEndOf="@id/dessert3"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp" />

    <!-- Total Amount -->
    <TextView
        android:id="@+id/totalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Amount: $0.00"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/quantityDessert3Spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Total Quantity -->
    <TextView
        android:id="@+id/totalQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Quantity: 0"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/totalAmount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Add to Order Button -->
    <Button
        android:id="@+id/addToOrderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to Cart"
        app:layout_constraintTop_toBottomOf="@id/totalQuantity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Checkout Button -->
    <Button
        android:id="@+id/addToCheckoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checkout"
        app:layout_constraintTop_toBottomOf="@id/addToOrderButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#A987E6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
